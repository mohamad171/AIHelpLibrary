<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainFragment">
    <ImageView
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/img"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:textColor="@color/aiwhite"
        android:textAlignment="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="به سرویس پشتیبانی آنلاین خوش آمدید، برای ادامه لطفا یکی از گزینه های زیر را انتخاب کنید."
        />
    <Button
        android:id="@+id/faq_btn"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="سوالات متداول"
        android:textColor="@color/aiwhite"
        android:textSize="18dp"
        />
    <Button
        android:id="@+id/online_chat_btn"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/faq_btn"
        android:background="@color/colorPrimaryDark"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="گفت و گوی آنلاین"
        android:textColor="@color/aiwhite"
        android:textSize="18dp"
        />

    <TextView
        android:background="@color/colorPrimary"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/aiwhite"
        android:textAlignment="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Powered by AiHelp.ir"
        />
</RelativeLayout>