<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".SaveFragment">

    <TextView
    android:layout_marginTop="100dp"
    android:layout_centerHorizontal="true"
    android:textColor="@color/aiwhite"
    android:textAlignment="center"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:text="درصورت وارد کردن ایمیل در باکس زیر ، بعد از پاسخ پشتیبان به شما اطلاع خواهیم داد." />

    <EditText
        android:padding="10dp"
        android:id="@+id/email_edt"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimaryDark"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:textColorHint="@color/aigray"
        android:hint="ایمیل"
        android:textColor="@color/aiwhite"
        android:textSize="14dp"
        />
    <Button
        android:id="@+id/email_btn"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email_edt"
        android:background="@color/colorPrimaryDark"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="ثبت آدرس ایمیل"
        android:textColor="@color/aiwhite"
        android:textSize="14dp"
        />

    <Button
        android:id="@+id/aiskip_btn"
        android:layout_marginLeft="30dp"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/aiwhite"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="رد کردن"
        />
</RelativeLayout>